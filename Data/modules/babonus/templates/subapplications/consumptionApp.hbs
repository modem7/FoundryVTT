<form class="dnd5e" autocomplete="off">
  <div class="form-group">
    <label class="label">{{localize "BABONUS.ConfigurationConsumptionType"}}</label>
    <div class="form-fields">
      <select name="consume.type">
        {{selectOptions choices selected=consume.type nameAttr="value" labelAttr="label" localize=true}}
      </select>
    </div>
  </div>

  <div class="form-group">
    <label class="label">{{localize "BABONUS.ConfigurationConsumptionScaling"}}</label>
    <div class="form-fields">
      <input type="checkbox" name="consume.scales" {{checked consume.scales}} {{disabled isEffect}}>
    </div>
  </div>

  <div class="form-group">
    <label class="label">{{localize "BABONUS.ConfigurationConsumptionConsumedValues"}}</label>
    <div class="form-fields">
      <input type="number" data-dtype="Number" name="consume.value.min" value="{{consume.value.min}}" placeholder="{{localize 'Minimum'}}" {{disabled isEffect}}>
      <input type="number" data-dtype="Number" name="consume.value.max" value="{{consume.value.max}}" placeholder="{{localize 'Maximum'}}" {{disabled disableMax}}>
    </div>
  </div>

  <div class="form-group">
    <label class="label">{{localize "BABONUS.ConfigurationConsumptionScalingFormula"}}</label>
    <div class="form-fields">
      <input type="text" name="consume.formula" value="{{consume.formula}}" placeholder="{{localize 'DND5E.Formula'}}" {{disabled disableMax}}>
    </div>
  </div>

  <button type="submit">
    <i class="fa-solid fa-save"></i> {{localize "Save"}}
  </button>
</form>
