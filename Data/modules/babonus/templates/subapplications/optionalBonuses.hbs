<div class="babonus optionals">
  {{#each bonuses as |bonus|}}
  <div class="optional" data-bonus-uuid="{{bonus.babonus.uuid}}">

    <div class="bonus-text">
      <span class="name" data-tooltip="{{bonus.tooltip}}">
        {{bonus.babonus.name}}.
      </span>
      <span class="description">
        {{{bonus.babonus.description}}}
      </span>
    </div>

    {{#if bonus.babonus.isScaling}}
    <div class="consumption">
      <label class="label">
        {{localize "BABONUS.ConfigurationConsumptionConsume"}}
      </label>
      <select>{{{bonus.options}}}</select>
    </div>
    {{/if}}

    <button type="button" data-action="{{bonus.action}}">
      <i class="fa-solid fa-plus"></i>
    </button>

  </div>
  {{/each}}
</div>
