{{~#if
  (ne this.selected false)
~}}
<div class="tah-action{{~#if cssClass}} {{cssClass}}{{~/if~}}" {{~#if spellLevel~}}data-spell-lvl="{{spellLevel}}"{{~/if~}} {{~#if title~}} title="{{title}}"{{~/if~}}>
    <button value="{{encodedValue}}" {{~#if cssClass~}}class="{{cssClass}}{{#activeText}} activeText{{/activeText}}"{{~/if~}}>
        {{~#if img~}}<div class="tah-img" style="background: url({{img}}) no-repeat center center; background-size:contain"></div>{{~/if~}}
        <span class="tah-action-button-content">
            {{~#if icon1~}}<div class="tah-icon">{{{icon1}}}</div>{{~/if~}}
            {{~#if icon2~}}<div class="tah-icon">{{{icon2}}}</div>{{~/if~}}
            {{~#if icon3~}}<div class="tah-icon">{{{icon3}}}</div>{{~/if~}}
            <div class="tah-action-button-text">
            {{~#if useRawHtmlName}}
              {{{name}}}
            {{~else~}}
              {{name}}
            {{~/if~}}
            </div>
            {{~#if info1.icon~}}
            <div class="tah-info1{{~#if info1.class}} {{info1.class}}{{~/if}}">{{{info1.icon}}}</div>
            {{~else~}}
            {{~#if info1.text~}}<div class="tah-info1{{~#if info1.class}} {{info1.class}}{{~/if}}" title="{{~#if info1.title}}{{info1.title}}{{~else~}}{{info1.text}}{{~/if}}">{{info1.text}}</div>{{~/if~}}
            {{~/if~}}
            {{~#if info2.icon~}}
            <div class="tah-info2{{~#if info2.class}} {{info2.class}}{{~/if}}">{{{info2.icon}}}</div>
            {{~else~}}
            {{~#if info2.text~}}<div class="tah-info2{{~#if info2.class}} {{info2.class}}{{~/if}}" title="{{~#if info2.title}}{{info2.title}}{{~else~}}{{info2.text}}{{~/if}}">{{info2.text}}</div>{{~/if~}}
            {{~/if~}}
            {{~#if info3.icon~}}
            <div class="tah-info3{{~#if info3.class}} {{info3.class}}{{~/if}}">{{{info3.icon}}}</div>
            {{~else~}}
            {{~#if info3.text~}}<div class="tah-info3{{~#if info3.class}} {{info3.class}}{{~/if}}" title="{{~#if info3.title}}{{info3.title}}{{~else~}}{{info3.text}}{{~/if}}">{{info3.text}}</div>{{~/if~}}
            {{~/if~}}
        </span>
    </button>
</div>
{{~/if~}}